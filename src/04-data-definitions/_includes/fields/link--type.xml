---
id: link-type
label: Link Type
message:
---

{{#use 'link--type' with=(array 'options' 'nesting')}}
<text identifier="{{id}}"
      label="{{label}}"
      help-text="{{message}}"
      required="true"
      type="radiobutton">
  {{#unless (eq options.page false)}}
  <radio-item show-fields="
    {{#if nesting}}{{nesting}}/{{/if}}{{id}}/{{link--page.id}},
    {{#if nesting}}{{nesting}}/{{/if}}{{id}}/{{link--customizations.id}}"
    value="{{link--page.label}}"/>
  {{/unless}}
  {{#unless (eq options.file false)}}
  <radio-item show-fields="
    {{#if nesting}}{{nesting}}/{{/if}}{{id}}/{{link--file.id}},
    {{#if nesting}}{{nesting}}/{{/if}}{{id}}/{{link--customizations.id}}"
    value="{{link--file.label}}"/>
  {{/unless}}
  {{#unless (eq options.url false)}}
  <radio-item show-fields="
    {{#if nesting}}{{nesting}}/{{/if}}{{id}}/{{link--url.id}},
    {{#if nesting}}{{nesting}}/{{/if}}{{id}}/{{link--label.id}},
    {{#if nesting}}{{nesting}}/{{/if}}{{id}}/{{link--description.id}}"
    value="{{link--url.label}}"/>
  {{/unless}}
</text>
{{/use}}
