---
id: link-type
label: Link Type
message: Select the type of link that you wish to insert.
---

{{#use 'link--type' with=(array 'options' 'nesting' 'required')}}
{{#if (gte (length (filter (values options) true)) 2)}}
<text identifier="{{id}}"
      label="{{label}}"
      help-text="{{message}}"
      {{#if required}}
      required="true"
      {{else}}
      default="None"
      {{/if}}
      type="radiobutton">
  {{#unless required}}
  <radio-item value="None"/>
  {{/unless}}
  {{#unless (eq options.page false)}}
  <radio-item show-fields="
    {{#if nesting}}{{nesting}}/{{/if}}{{link--page.id}},
    {{#if nesting}}{{nesting}}/{{/if}}{{link--customizations.id}}"
    value="{{link--page.label}}"/>
  {{/unless}}
  {{#unless (eq options.file false)}}
  <radio-item show-fields="
    {{#if nesting}}{{nesting}}/{{/if}}{{link--file.id}},
    {{#if nesting}}{{nesting}}/{{/if}}{{link--customizations.id}}"
    value="{{link--file.label}}"/>
  {{/unless}}
  {{#unless (eq options.url false)}}
  <radio-item show-fields="
    {{#if nesting}}{{nesting}}/{{/if}}{{link--url.id}},
    {{#if nesting}}{{nesting}}/{{/if}}{{link--label.id}},
    {{#if nesting}}{{nesting}}/{{/if}}{{link--description.id}}"
    value="{{link--url.label}}"/>
  {{/unless}}
</text>
{{/if}}
{{/use}}
