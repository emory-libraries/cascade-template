---
id: icon
label: Icon ID
message: Choose an icon by ID at http://template.library.emory.edu/styleguide/patternlibrary/current/?p=meta-icons (e.g., 'material-mail').
---

{{#use 'icon' with=(array 'default' 'required')}}
<text help-text="{{message}}"
      identifier="{{id}}"
      label="{{label}}"
      {{#if this.default}}default="{{this.default}}"{{/if}}
      {{#if required}}required="true"{{/if}}/>
{{/use}}
