---
id: contact-info
label: Contact Information
fields:
  - include: email
    required: true
  - include: phone
    required: true
  - include: fax
  - id: libcal
    label: LibCal URL
    message: Provide the full LibCal URL for this person, if applicable.
  - include: address
    variant: mailing
---

{{#use 'bio--contact'}}
<group identifier="{{id}}" label="{{label}}">
  {{#each fields}}
    {{#if include}}
      {{> (valueOf include) (merge (object) ../this this)}}
    {{else}}
      <text identifier="{{id}}"
            label="{{label}}"
            help-text="{{message}}"
            {{#if required}}required="true"{{/if}}/>
    {{/if}}
  {{/each}}
</group>
{{/use}}
