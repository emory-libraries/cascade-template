---
fields:
  - id: display-name
    label: Display Name
    message: Enter the person's full name exactly how it should be displayed on the page. Optionally, you may choose to include postnominals here (i.e., 'PhD').
    required: true
  - id: given-name
    label: First Name
    message: Enter the person's first, or given, name.
    required: true
  - id: middle-name
    label: Middle Name
    message: Enter the person's middle name.
  - id: family-name
    label: Last Name
    message: Enter the person's last, or family, name.
    required: true
  - id: preferred-pronouns
    label: Preferred Pronouns
    message: Provide a slash-separated list of the person's preferred pronouns (e.g., 'she/her').
    regex: ^(\w+\/)+(\w+)$
    format: she/her
---

{{#use 'bio--name'}}
{{#each fields}}
<text identifier="{{id}}"
      label="{{label}}"
      help-text="{{message}}"
      {{#if regex}}regular-expression="{{regex}}"{{/if}}
      {{#if format}}input-data-format="{{format}}"{{/if}}
      {{#if required}}required="true"{{/if}}/>
{{/each}}
{{/use}}
